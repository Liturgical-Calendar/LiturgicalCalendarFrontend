{
    "name": "liturgical-calendar/frontend",
    "description": "Frontend website for the Liturgical Calendar API",
    "type": "library",
    "require": {
        "liturgical-calendar/components": "^3.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3",
        "squizlabs/php_codesniffer": "*",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "captainhook/captainhook-phar": "^5.25",
        "captainhook/hook-installer": "^1.0"
    },
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "LiturgicalCalendar\\Frontend\\": "src/"
        },
        "files": ["src/pgettext.php"]
    },
    "authors": [
        {
            "name": "John R. D'Orazio",
            "email": "priest@johnromanodorazio.com"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "post-install-cmd": [
            "LiturgicalCalendar\\Frontend\\Utilities::postInstall"
        ],
        "post-update-cmd": [
            "LiturgicalCalendar\\Frontend\\Utilities::postInstall"
        ],
        "lint": "phpcs || echo 'Linting failed. Please run composer lint:fix to fix the linting issues.'",
        "lint:fix": "phpcbf || echo 'Lint fixing failed. Please check the linting failures and fix them manually.'",
        "analyse": "phpstan analyse -c phpstan.neon",
        "parallel-lint": "parallel-lint --exclude .git --exclude vendor .",
        "install-codestandards": [
            "PHPCSStandards\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ],
        "test": "phpunit tests"
    },
    "config": {
        "allow-plugins": {
            "captainhook/captainhook-phar": true,
            "captainhook/hook-installer": true
        }
    }
}
