parameters:
    level: 7
    paths:
        - src
        - includes
        - layout
        - about.php
        - admin-dashboard.php
        - missals-editor.php
        - decrees.php
        - easter.php
        - examples.php
        - extending.php
        - index.php
        - liturgyOfAnyDay.php
        - temporale.php
        - translations.php
        - usage.php
    excludePaths:
        - examples (?)
        - .intelephense-helper.php
    scanFiles:
        - includes/common.php
    treatPhpDocTypesAsCertain: false
    ignoreErrors:
        # Bootstrap variables - All analyzed files include 'includes/common.php' which defines these variables.
        # PHPStan cannot detect this because it doesn't execute includes during static analysis.
        # These are FALSE POSITIVES - variables ARE defined at runtime.
        -
            message: '#Variable \$(i18n|apiConfig|authHelper|messages|adminPages) might not be defined\.#'
            paths:
                - about.php
                - admin-dashboard.php
                - missals-editor.php
                - decrees.php
                - easter.php
                - examples.php
                - extending.php
                - index.php
                - layout/footer.php
                - layout/header.php
                - liturgyOfAnyDay.php
                - temporale.php
                - usage.php
