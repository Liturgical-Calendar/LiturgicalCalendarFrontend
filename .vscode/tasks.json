{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "launch-browser",
            "type": "shell",
            "windows": {
                "command": "${command:workbench.action.terminal.sendSequence}",
                "args": [
                {
                    "text": "start http://localhost:3000\n" // For Windows
                }
                ],
                "problemMatcher": []
            },
            "linux": {
                "command": "/bin/bash",
                "args": [
                    "-c",
                    "if grep -q microsoft /proc/version; then powershell.exe Start-Process http://localhost:3000; else xdg-open http://localhost:3000; fi"
                  ],
                "problemMatcher": []
            },
            "osx": {
                "command": "open http://localhost:3000", // For macOS
                "problemMatcher": []
            }
        },
        {
            "label": "php-server",
            "type": "shell",
            "command": "php -S localhost:3000",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "launch-browser"
            ]
        }
    ]
}
