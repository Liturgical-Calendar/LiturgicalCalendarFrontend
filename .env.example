APP_ENV=development
API_PROTOCOL=http
API_HOST=localhost
API_PORT=8000
# API base path (must start with leading slash or be empty)
API_BASE_PATH=/
# Enable verbose debug logging (true/false)
DEBUG_MODE=false

# Accuracy Tests Interface URL (UnitTestInterface)
ACCURACY_TESTS_URL=http://localhost:8080

# Playwright test configuration
# Frontend URL (where PHP server is running for tests)
FRONTEND_URL=http://localhost:3000
# Path to API repository (defaults to ../LiturgicalCalendarAPI)
# API_REPO_PATH=/path/to/LiturgicalCalendarAPI
# Test user credentials (must exist in the API)
TEST_USERNAME=testuser
TEST_PASSWORD=testpassword
